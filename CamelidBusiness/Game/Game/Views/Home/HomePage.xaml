<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.HomePage"
             Style="{StaticResource HomeStyle}">

    <ContentPage.Content>
        <StackLayout VerticalOptions="Center"
                     HorizontalOptions="CenterAndExpand">
            <Image Source="logo.png"
                   Style="{StaticResource ImageLargeStyle}"
                   Scale="1.65"
                   Margin="40"/>

            <StackLayout HorizontalOptions="Center">
                <ImageButton x:Name="GameButton"
                             Source="button_start.png"
                             Clicked="GameButton_Clicked"
                             Style="{StaticResource HomeButtonStyle}"
                             Margin="0,10,0,30"/>
                <ImageButton x:Name="AboutButton"
                             Source="about_game.png"
                             Clicked="AboutButton_Clicked"
                             Style="{StaticResource HomeButtonStyle}" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>